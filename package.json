{
  "name": "voice-mirror",
  "private": true,
  "version": "0.1.0",
  "description": "Voice-controlled AI agent overlay for your desktop",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "predev": "taskkill /F /IM voice-mirror-mcp.exe >nul 2>&1 & exit /b 0",
    "dev": "cargo build --manifest-path src-tauri/Cargo.toml --bin voice-mirror-mcp && tauri dev",
    "build": "cargo build --manifest-path src-tauri/Cargo.toml --release --bin voice-mirror-mcp && tauri build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./jsconfig.json",
    "test": "node --test \"test/**/*.test.cjs\" \"test/**/*.test.mjs\"",
    "test:rust": "cd src-tauri && cargo test",
    "test:all": "npm test && npm run test:rust"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/lint": "^6.9.4",
    "@codemirror/merge": "^6.12.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.15",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/plugin-updater": "^2.10.0",
    "codemirror": "^6.0.2",
    "dompurify": "^3.3.1",
    "fuzzysort": "^3.1.0",
    "ghostty-web": "github:contextmirror/ghostty-web",
    "marked": "^15.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tauri-apps/cli": "^2.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "vite": "^6.0.0"
  }
}
