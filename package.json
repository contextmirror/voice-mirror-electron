{
  "name": "voice-mirror-electron",
  "version": "0.9.6",
  "description": "Voice-controlled AI agent overlay for your entire computer",
  "main": "electron/main.js",
  "scripts": {
    "start": "node scripts/launch.js",
    "dev": "node scripts/launch.js --dev",
    "build": "electron-builder",
    "setup": "node cli/index.mjs setup",
    "doctor": "node cli/index.mjs doctor",
    "test": "node --test test/unit/*.test.js test/integration/*.test.js mcp-server/lib/memory/*.test.js mcp-server/handlers/*.test.js"
  },
  "author": "",
  "license": "MIT",
  "bin": {
    "voice-mirror": "cli/index.mjs"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0"
  },
  "build": {
    "appId": "com.voicemirror.app",
    "productName": "Voice Mirror",
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dompurify": "^3.3.1",
    "ghostty-web": "^0.4.0",
    "marked": "^17.0.1",
    "node-pty": "^1.1.0",
    "playwright-core": "^1.58.0",
    "uiohook-napi": "^1.5.4",
    "ws": "^8.19.0"
  }
}
