{
  "name": "voice-mirror-electron",
  "version": "0.10.4",
  "description": "Voice-controlled AI agent overlay for your entire computer",
  "main": "electron/main.js",
  "scripts": {
    "start": "node scripts/launch.js",
    "dev": "node scripts/launch.js --dev",
    "build:voice-core": "cd voice-core && cargo build --release",
    "build:voice-core:debug": "cd voice-core && cargo build",
    "prebuild": "npm run build:voice-core",
    "build": "electron-builder",
    "setup": "node cli/index.mjs setup",
    "doctor": "node cli/index.mjs doctor",
    "test": "node --test test/unit/*.test.js test/integration/*.test.js mcp-server/lib/memory/*.test.js mcp-server/handlers/*.test.js"
  },
  "author": "",
  "license": "MIT",
  "bin": {
    "voice-mirror": "cli/index.mjs"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0"
  },
  "build": {
    "appId": "com.voicemirror.app",
    "productName": "Voice Mirror",
    "publish": [
      {
        "provider": "github",
        "owner": "contextmirror",
        "repo": "voice-mirror-electron"
      }
    ],
    "extraResources": [
      {
        "from": "CHANGELOG.md",
        "to": "CHANGELOG.md"
      }
    ],
    "extraFiles": [
      {
        "from": "voice-core/target/release/",
        "to": "resources/bin/",
        "filter": ["voice-core", "voice-core.exe"]
      },
      {
        "from": "tools/espeak-ng/",
        "to": "resources/bin/espeak-ng/",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    },
    "mac": {
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon-256.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "dompurify": "^3.3.1",
    "electron-updater": "^6.3.0",
    "ghostty-web": "^0.4.0",
    "marked": "^17.0.1",
    "node-pty": "^1.1.0",
    "playwright-core": "^1.58.0",
    "ws": "^8.19.0"
  }
}
